<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- draw tab background -->
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" >
                <solid android:color="@android:color/transparent" />
            </stroke>

            <gradient
                android:angle="90"
                android:endColor="@color/head_gradient_start"
                android:startColor="@color/head_gradient_end" />
        </shape>
    </item>
    <item
        android:bottom="-2dp"
        android:left="1dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/head_buttons_border" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>